<h1>Listing posts</h1>


<%= I18n.l Time.now %>

<table>
  <tr>
    <th><%= t 'post.title'%></th>
    <th>Conteudo</th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.titulo %></td>
    <td><%= post.conteudo %></td>
    <td>
      <%= show_links_for(post) %>
    </td>
  </tr>
<% end %>
</table>

<br />
<%= paginate @posts%>

<% if session[:username] %>
  <%= link_to 'Logout', logout_path %>
<% else %>
  <%= link_to 'Login', login_path %>
<% end %>

<%= link_to 'New Post', new_post_path %>
